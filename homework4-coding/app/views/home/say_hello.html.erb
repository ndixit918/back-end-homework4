<div class='form'>  
  <h2>Say Hello</h2>
	<%= form_tag("/formal-hello", :method => "POST") do %>
  		<%= label_tag('first-name', "First Name") %>
  		<%= text_field_tag('first-name') %>  
  		<br>
  		<%= label_tag('last-name', "Last Name") %>
  		<%= text_field_tag('last-name') %>
  		<br>
  		<%= label_tag('email', "Your Email") %>
  		<%= email_field_tag('email', "", class: 'email') %>
  		<br>
  		<%= label_tag('subject', "Subject") %>
  		<%= text_field_tag('subject', "", class: 'subject') %>
  		<br>
  		<%= label_tag('message', "Type Your Message") %>
  		<%= text_area_tag('message', "", class: 'text-area') %>  
  		<br>
  		<%= submit_tag("Submit", :class => 'submit') %>
	<% end %>
</div>